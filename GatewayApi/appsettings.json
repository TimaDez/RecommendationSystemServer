{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=recommendationdb;Username=admin;Password=7114"
  },

  "Jwt": {
    "Issuer": "RecommendationSystem",
    "Audience": "RecommendationSystemClients",
    "Key": ""
  },

  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth",
        "Match": { "Path": "/api/Auth/{**catch-all}" }
      },
      "analytics-route": {
        "ClusterId": "analytics",
        "Match": { "Path": "/api/Analytics/{**catch-all}" }
      }
    },
    "Clusters": {
      "auth": {
        "Destinations": {
          "d1": {"Address": "http://authapi:8080/"}
        }
      },
      "analytics": {
        "Destinations": {
          "d1": {"Address": "http://analyticsapi:8080/"}
        }
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
