{
  "ConnectionStrings": {
    "Default": "Host=postgres;Port=5432;Database=recommendationdb;Username=admin;Password=7114"
  },

  "Jwt": {
    "Issuer": "RecommendationSystem",
    "Audience": "RecommendationSystemClients",
    "Key": ""
  },

  "ReverseProxy": {
  "Routes": {
    "auth-route": {
      "ClusterId": "auth",
      "Match": { "Path": "/api/auth/{**catch-all}" }
    },
    "analytics-route": {
      "ClusterId": "analytics",
      "Match": { "Path": "/api/analytics/{**catch-all}" }
    },

    "auth-swagger": {
      "ClusterId": "auth",
      "Match": { "Path": "/authswagger/{**catch-all}" },
      "Transforms": [
        { "PathRemovePrefix": "/authswagger" }
      ]
    },
    "analytics-swagger": {
      "ClusterId": "analytics",
      "Match": { "Path": "/analyticsswagger/{**catch-all}" },
      "Transforms": [
        { "PathRemovePrefix": "/analyticsswagger" }
      ]
    }
  },
  "Clusters": {
    "auth": {
      "Destinations": {
        "d1": { "Address": "http://authapi:8080/" }
      }
    },
    "analytics": {
      "Destinations": {
        "d1": { "Address": "http://analyticsapi:8080/" }
      }
    }
  }
},

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
